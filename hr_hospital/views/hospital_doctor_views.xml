<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree default_order='name'>
                <field name="name"/>
                <field name="specialty"/>
                <field name="phone"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="gender"/>
                        <field name="specialty"/>
                        <field name="mentor_id"/>
                        <field name="intern_ids" widget="one2many_tags"/>
                        <field name="photo" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_doctor_act_window" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hospital_doctor_menu" action="hospital_doctor_act_window" parent="hospital_lists_menu" name="Doctors" sequence="200"/>
</odoo>
