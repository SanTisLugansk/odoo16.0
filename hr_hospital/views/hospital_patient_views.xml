<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree()</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="gender"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form()</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="gender"/>
                        <field name="passport_data"/>
                        <field name="contact_person_ids" widget="many2many_tags"/>
                        <field name="photo" widget="image"/>
                        <field name="observing_doctor_id"/>
                        <field name="date_of_birth"/>
                        <field name="age"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_patient_act_window" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hospital_patient_menu"
              action="hospital_patient_act_window"
              parent="hospital_lists_menu"
              name="Patients"
              sequence="300"/>
</odoo>
